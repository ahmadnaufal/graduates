<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

<section class="full-width">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 style="text-align: center;" class="mb-4">Create a new message</h1>
        <form action="/messageok" method="POST">
          <div class="form-group row">
            <label for="recipient" class="col-sm-2 col-form-label">Send To</label>
            <div class="col-sm-10">
              <select name="recipient" id="recipient" class="form-control">
                <% recipients.forEach(function(recipient) { %>
                  <option value="<%= recipient._id %>"><%= recipient.name %></option>
                <% }); %>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label for="message" class="col-sm-2 col-form-label">Message</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="message" name="message"></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label for="from" class="col-sm-2 col-form-label">From</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="from" name="from" placeholder="Your name here" />
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

</body>
</html>
